/* pour activer le pwm il faut couper l'uart0 */
	uart0 {
		status = "disabled";
		//pins = "PA5";
		//function = "uart0";
	};

	pwm0_pin: pwm0-pin {
        pins = "PA5";
		function = "pwm0";
	};
};

&r_pio {
	gpio-line-names =
		/* PL */
		"", "CPUX-SET", "CON2-P32", "POWER-KEY", "CON2-P36",
			"VCC-IO-EN", "USB0-ID", "WL-PWR-EN",
		"PWR-STB", "PWR-DRAM", "PWR-LED", "IR-RX", "", "", "", "",
		"", "", "", "", "", "", "", "",
		"", "", "", "", "", "", "", "";
};

&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&usbphy {
	usb0_id_det-gpios = <&r_pio 0 6 GPIO_ACTIVE_HIGH>; /* PL6 */
	/*
	 * There're two micro-USB connectors, one is power-only and another is
	 * OTG. The Vbus of these two connectors are connected together, so
	 * the external USB device will be powered just by the power input
	 * from the power-only USB port.
	 */
	status = "okay";
};

&emac {
	phy-handle = <&int_mii_phy>;
	phy-mode = "mii";
	allwinner,leds-active-low;
	status = "okay";
};

/* PA11 PA12 */
&i2c0 {

	#address-cells = <1>;
	#size-cells = <0>;

	status = "okay";

	exp_gpio0: mcp23008@26 {

		status = "okay";

		compatible = "microchip,mcp23008";
		label="expander-A";
		reg = <0x26>;
		gpio-controller;
		#gpio-cells = <2>;
		gpio-line-names =	"TYPE-2_NL1_ON",
							"TYPE-2_L2L3_ON",
							"TYPE-E/F_ON",
							"LOCK_D",
							"RCD_DIS",
							"RCD_TST",
							"RCD_RESET",
							"UNUSED";

		unused_gpio {
			gpio-hog;
			gpios = <7 0>;
			input;
		};

	};

	exp_gpio1: expander-B@27 {

		status="okay";

		compatible = "microchip,mcp23008";
		label = "expander-B";
		reg = <0x27>;
		gpio-controller;
		#gpio-cells = <2>;

		gpio-line-names =	"LED_DIS",
							"CP_DIS",
							"PP_CS",
							"CP_CS",
							"T_CS",
							"PM_CS",
							"PM1",
							"PM0";

	};

	rtc_ext: rtc_eeprom@6f {

		satus = "okay";
		compatible = "microchip,mcp7941x";

		reg = <0x6F>;

	};

};

/* PA18 PA19 */
&i2c1 {
	status = "disabled";
};

&spi0 {
	#address-cells = <1>;
	#size-cells = <0>;

	status = "okay";
	cs-gpios = <&exp_gpio1 3 GPIO_ACTIVE_LOW>, <0>, <&exp_gpio1 2 GPIO_ACTIVE_LOW>, <&exp_gpio1 4 GPIO_ACTIVE_LOW>;

	adc_CP@0 {
		status = "okay";
		compatible = "microchip,mcp3202";
		reg = <0>;
		spi-max-frequency = <1000000>;
	};

	spidev@1{
		status = "okay";
		compatible = "rohm,dh2228fv";
		reg = <1>; /* choosed chip select 1 bc : PC3 = CS0 (reg 0)*/
		spi-max-frequency = <100000000>;
	};

	adc_PP@2 {
		status = "okay";
		compatible = "microchip,mcp3202";
		reg = <2>;
		spi-max-frequency = <1000000>;
	};

	adc_temp@3 {
		status = "okay";
		compatible = "microchip,mcp3202";
		reg = <3>;
		spi-max-frequency = <1000000>;
	};
};

&spi1 { // a utiliser pour les leds ?
	//pinctrl-names = "default";
	//pinctrl-0 = <&spi1_pins>; // a changer seluement si on veut utiliser les autres pins
	#address-cells = <1>;
	#size-cells = <0>;

	status = "okay";

	spidev@1{ // leds
		status = "okay";
		compatible = "rohm,dh2228fv";
		reg = <1>; /* choosed chip select 1 bc : PA13 =CS0 (reg 0)*/
		spi-max-frequency = <10000000>;
	};
};

/* PE12 PE13 */
&i2c2 {
	status = "disabled";
};

/* PL0 PL1 */
&r_i2c { /* r_i2c */
	status = "disabled";
};

&pwm { //0xC21400
	pinctrl-names = "default";
	pinctrl-0 = <&pwm0_pin>;
	status = "okay";
};

// PA5=PWM0/UART0_RX PA6=PWM1 PL10=S_PWM=LED_PWR
&uart3{
	pinctrl-names = "default";
	pinctrl-0 = <&uart2_pins>;
	status = "okay";
};
